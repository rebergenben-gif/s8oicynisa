<body>

<header>
    <h1>Duo Shop</h1>
    <p>Jij en je vriend kunnen hier samen producten verkopen!</p>
</header>

<main>

    <!-- Producten toevoegen (door jullie) -->
    <section class="add-product">
        <h2>Product toevoegen</h2>
        <input type="text" id="productName" placeholder="Productnaam">
        <input type="number" id="productPrice" placeholder="Prijs (€)">
        <button onclick="addProduct()">Toevoegen</button>
    </section>

    <!-- Lijst met producten -->
    <section class="product-section">
        <h2>Onze Producten</h2>
        <div class="product-list" id="productList"></div>
    </section>

    <!-- Winkelmandje -->
    <section id="cart">
        <h2>Winkelmandje</h2>
        <div class="cart-list" id="cartList"></div>
        <h3 id="total">Totaal: €0</h3>
        <button onclick="checkout()">Afrekenen</button>
    </section>

</main>

<script>
let products = [];
let cart = [];

// Product toevoegen (door jullie beiden)
function addProduct() {
    const name = document.getElementById('productName').value;
    const price = parseFloat(document.getElementById('productPrice').value);
    if(name && !isNaN(price)) {
        const product = { name, price };
        products.push(product);
        document.getElementById('productName').value = '';
        document.getElementById('productPrice').value = '';
        renderProducts();
    } else {
        alert('Voer een geldige naam en prijs in');
    }
}

// Render producten
function renderProducts() {
    const productList = document.getElementById('productList');
    productList.innerHTML = '';
    products.forEach((product, index) => {
        const div = document.createElement('div');
        div.className = 'product';
        div.innerHTML = `
            <h3>${product.name}</h3>
            <p>€${product.price.toFixed(2)}</p>
            <button onclick="addToCart(${index})">Voeg toe aan winkelmandje</button>
        `;
        productList.appendChild(div);
    });
}

// Winkelmandje functies
function addToCart(index) {
    const product = products[index];
    cart.push(product);
    renderCart();
}

function renderCart() {
    const cartList = document.getElementById('cartList');
    cartList.innerHTML = '';
    let total = 0;
    cart.forEach((item, i) => {
        total += item.price;
        const div = document.createElement('div');
        div.className = 'cart-item';
        div.innerHTML = `
            <h4>${item.name}</h4>
            <p>€${item.price.toFixed(2)}</p>
            <button onclick="removeFromCart(${i})">Verwijderen</button>
        `;
        cartList.appendChild(div);
    });
    document.getElementById('total').innerText = `Totaal: €${total.toFixed(2)}`;
}

function removeFromCart(index) {
    cart.splice(index, 1);
    renderCart();
}

// Afrekenen
function checkout() {
    if(cart.length === 0) {
        alert('Je winkelmandje is leeg!');
        return;
    }
    let names = cart.map(p => p.name).join(', ');
    let total = cart.reduce((sum, p) => sum + p.price, 0);
    alert(`Bedankt voor je aankoop van: ${names}\nTotaal: €${total.toFixed(2)}`);
    cart = [];
    renderCart();
}

// Voorbeeldproducten
products.push({name: 'Product 1', price: 29.95});
products.push({name: 'Product 2', price: 19.95});
renderProducts();
</script>

</body>
</html>

