            max-width: 1000px;
            margin: 30px auto;
            padding: 0 20px;
        }
        .product-list, .cart-list {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
        }
        .product, .cart-item {
            background: white;
            padding: 20px;
            border-radius: 8px;
            flex: 1 1 200px;
            text-align: center;
        }
        button {
            background: #28a745;
            color: white;
